CC         = clang
CFLAGS_REL = -Wall -Wpedantic -std=c99 -O3
CFLAGS_DBG = -Wall -Wpedantic -std=c99
BIN        = s
SRC        = main.c board.c
HDR        = board.h globs.h

all: $(SRC) $(HDR)
	$(CC) $(CFLAGS_REL) -o $(BIN) $(SRC)

dbg: $(SRC) $(DBG_SRC) $(HDR) $(DBG_HDR)
	$(CC) -g -o $(BIN) $(SRC) -DDEBUG

clean:
	rm -rf *.o $(BIN)
