[user]
    name = Markus Moll
    email = markus.moll@hacon.de
[push]
    default = simple
[pull]
    rebase = true
[fetch]
    prune = true
[core]
    editor = vim
    excludesfile = /home/mmo/.gitignore
[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"
[merge]
    tool = meld
    prompt = false
[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
[submodule]
    recurse = true
[alias]
    co = checkout
    br = branch
    ci = commit
    st = status --short --branch
    df = difftool -d
    lg = log --date=format:'%Y-%m-%d' --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) %C(green)%ad%C(reset) %C(white)%s%C(reset) %C(red)%an%C(reset)%C(bold yellow)%d%C(reset)'
    unstage = reset HEAD --
    publish = push -u origin HEAD
    rollback = reset --hard HEAD
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
